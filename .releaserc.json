{
  "branches": ["main"],
  "tagFormat": "quiz-monorepo-v${version}",
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    [
      "@semantic-release/release-notes-generator",
      { "preset": "conventionalcommits" }
    ],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    ["./scripts/release/semantic-release-update-subpackages.mjs"],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json",
          "quiz-frontend/package.json",
          "quiz-frontend/package-lock.json",
          "quiz-backend-local/package.json",
          "quiz-backend-local/package-lock.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    ["@semantic-release/github"]
  ]
}

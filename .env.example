# Environment Variables for AI Integrations
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_API_KEY=your_ollama_api_key_here  # Optional, for authenticated Ollama instances

# Grok (xAI) Configuration
GROK_API_KEY=your_grok_api_key_here

# Hugging Face Configuration
HF_TOKEN=your_hugging_face_token_here

# OpenAI Configuration (if using)
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider Selection (optional, defaults to 'ollama')
AI_PROVIDER=ollama  # Options: ollama, grok, huggingface

# Netlify Environment Variables (set in Netlify dashboard)
# These are for serverless functions
# OLLAMA_URL
# OLLAMA_API_KEY
# GROK_API_KEY
# HF_TOKEN
# OPENAI_API_KEY
# AI_PROVIDER
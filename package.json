{
  "name": "quiz-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Full-stack quiz application with React frontend and Node.js backend",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "cd quiz-frontend && npm run dev",
    "dev:backend": "cd quiz-backend && npm run dev",
    "install:all": "npm install && cd quiz-frontend && npm install && cd ../quiz-backend && npm install",
    "build": "cd quiz-frontend && npm run build",
    "format:repo": "node ./scripts/format-repository.mjs",
    "strip:comments": "node ./scripts/remove-comments.mjs",
    "lint": "cd quiz-frontend && npm run lint"
  },
  "devDependencies": {
    "fast-glob": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "strip-comments": "^2.0.1",
    "strip-css-comments": "^5.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.1.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "semantic-release": "^24.1.0",
    "conventional-changelog-conventionalcommits": "^8.0.0"
  },
  "workspaces": [
    "quiz-frontend",
    "quiz-backend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Natti94/Quiz.git"
  },
  "keywords": [
    "quiz",
    "react",
    "node",
    "express",
    "mongodb",
    "education"
  ],
  "author": "Natti94",
  "license": "MIT"
}

{
  "name": "quiz-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Full-stack quiz application with React frontend and Node.js backend",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "cd quiz-frontend && npm run dev",
    "dev:backend": "cd quiz-backend-local && npm run dev",
    "install:all": "npm install && cd quiz-frontend && npm install && cd ../quiz-backend-local && npm install",
    "build": "cd quiz-frontend && npm run build",
    "format:repo": "node ./scripts/formatting/format-repository.mjs",
    "strip:comments": "node ./scripts/formatting/remove-comments.mjs",
    "lint": "cd quiz-frontend && npm run lint",
    "fix:npm-lock": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev/fix-npm-lock.ps1",
    "diagnose:llm": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev/diagnose-llm.ps1",
    "self-audit": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev/self-audit.ps1",
    "kill-local-sessions": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev/kill-local-host-sessions.ps1",
    "test:netlify-dev": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev/test-netlify-dev.ps1",
    "test:netlify-dev:with-tests": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev/test-netlify-dev.ps1 -CopyTests",
    "move-logs-to-infra": "INFRA_GIT_URL=git@github.com:org/infra.git node ./scripts/infra/move-logs-to-infra.mjs",
    "move-logs-to-archives": "INFRA_GIT_URL=git@github.com:org/infra.git node ./scripts/archiving/move-logs-to-archives.mjs",
    "backup:package-locks": "node ./scripts/backups/backup-package-locks.mjs",
    "check:ollama": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev/check-ollama.ps1",
    "scan-committed-logs": "node ./scripts/dev/scan-committed-logs.mjs",
    "clean-logfs": "node ./scripts/infra/clean-logfs.mjs",
    "move-generated-root": "node ./scripts/infra/move-root-generated.mjs"
    ,"test": "npm --workspace quiz-frontend run test"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^10.0.6",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "fast-glob": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "semantic-release": "^21.1.2",
    "strip-comments": "^2.0.1",
    "strip-css-comments": "^5.0.0"
  },
  "workspaces": [
    "quiz-frontend",
    "quiz-backend-local"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Natti94/Quiz.git"
  },
  "keywords": [
    "quiz",
    "react",
    "node",
    "express",
    "mongodb",
    "education"
  ],
  "author": "Natti94",
  "license": "MIT"
}
